{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "ESNext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler", // Esta opción debe ser un solo valor, no una matriz
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"incremental": true,
		"baseUrl": ".", // Asegúrate de que esto esté configurado correctamente
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.js",
		"**/*.mjs",
		"**/*.tsx",
		"next-env.d.ts",
		".next/types/**/*.ts",
		".prettierrc.mjs"
	],
	"exclude": ["node_modules", ".next", "dist"]
}
